//http://acm.timus.ru/problem.aspx?space=1&num=1068

#include<bits/stdc++.h>
using namespace std;

int main()
{
   int sum=0;
    int n;
    cin>>n;

     if(n<=0)
      {
        n=n*-1;
        sum=(n*(n+1))/2;
        sum=(sum-1)*(-1);

      }
    else
       {
        sum=(n*(n+1))/2;
       }

    
    cout<<sum<<endl;
 }
